<h1>Редастировать курс</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input name='title' id="title" type="text" class="validate" value="{{course.title}}">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>
    <div class="input-field">
        <input name='price' id="price" type="number" class="validate" value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену курса"></span>
    </div>
    <div class="input-field">
        <input name='img' id="img" type="text" class="validate" value="{{course.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите адрес картинки"></span>
    </div>
    <input type="hidden"  name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class='btn btn-primary'>Редастировать курс</button>
</form>

<form action="/courses/remove" method="POST" >
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class='btn red'>Удалить курс</button>
</form>