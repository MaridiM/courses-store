<h1>Дбавить новый курс</h1>

<form  action="/add" method="POST">
    <div class="input-field">
        <input name='title' id="title" type="text" class="validate">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>
    <div class="input-field">
        <input name='price' id="price" type="number" class="validate">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену курса"></span>
    </div>
    <div class="input-field">
        <input name='img' id="img" type="text" class="validate">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите адрес картинки"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class='btn btn-primary'>Добавить курс</button>
</form>